<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/couleur_blanche"
        android:orientation="vertical"
        tools:context=".ProfileUI">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405dp">
        <LinearLayout
                android:background="@color/couleurBouton"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/pic"
            />
            <TextView
                    android:text="Lens Mutombo"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt_name5"
                    tools:layout_editor_absoluteX="127dp"
                    tools:layout_editor_absoluteY="458dp"
                    android:fontFamily="@font/mclaren"
                    android:textSize="27sp"
                    android:textColor="@color/couleur_blanche"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>